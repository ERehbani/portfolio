---
import TechStack from "@/components/services/techStack.astro";
import CTASection from "@/components/services/CTASection.astro";
import ProcessSection from "@/components/services/processSection.astro";
import ServicesGrid from "@/components/services/servicesGrid.astro"
import ServicesHero from "@/components/services/servicesHero.astro"
import es from "@/i18n/es.json"
import "../styles/global.css";

import Footer from "@/components/footer.astro";
import { ContactDialog } from "@/components/services/contactDialog";
import Navbar from "@/components/services/navbar.astro";
---

<html>
    <head>
    <script>
      // Aplicar tema inmediatamente antes de que se renderice React
      (function () {
        const theme = localStorage.getItem("theme") || "dark";
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/keen-slider@6.8.5/keen-slider.min.css"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{es.head.services.title}</title>
    <link rel="canonical" href="https://www.elianrehbani.com/" />

    <link rel="alternate" hreflang="es" href="https://www.elianrehbani.com/" />
    <link rel="alternate" hreflang="en" href="https://www.elianrehbani.com/en" />
    <script type="application/ld+json">
      {JSON.stringify(structuredData)}
    </script>

    <meta name="description" content={es.head.services.description} />
    <meta name="keywords" content={es.head.services.keywords} />
    <meta name="author" content="Elian Rehbani" />

    <!-- Open Graph -->
    <meta property="og:title" content={es.head.services.og.title} />
    <meta property="og:description" content={es.head.services.og.description} />
    <meta property="og:image" content="/og.png" />
    <meta property="og:url" content="https://www.elianrehbani.com/" />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={es.head.services.og.twitter.title} />
    <meta name="twitter:description" content={es.head.services.og.twitter.description} />
    <meta name="twitter:image" content="/og.png" />
    <meta name="robots" content="index, follow" />

    <!-- Datos estructurados JSON-LD -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Elian Rehbani",
        "jobTitle": "Frontend Developer",
        "image": "/og.png",
        "url": "https://www.elianrehbani.com",
        "sameAs": [
          "https://www.linkedin.com/elianrehbani",
          "https://github.com/elianrehbani"
        ],
        "worksFor": {
          "@type": "Organization",
          "name": "Freelance / Autónomo"
        },
        "description": "Elian Rehbani is a Frontend Developer from Mar del Plata, Argentina, specialized in React, Next.js, TailwindCSS and TypeScript. Creates custom and scalable web solutions for businesses and professionals, with integrated metrics and continuous support.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Mar del Plata",
          "addressRegion": "Buenos Aires",
          "addressCountry": "Argentina"
        },
        "email": "elianrhbn@gmail.com",
        "knowsAbout": [
          "Frontend",
          "React",
          "Next.js",
          "TypeScript",
          "TailwindCSS",
          "Frontend Development",
          "Web Sites",
          "Page web",
          "Página web",
          "Web Development",
          "Web Development for Businesses",
          "Web Development for Professionals",
          "Web Development for Companies",
          "Web Development for Clients",
          "Web Sites for Businesses",
          "Web Maintenance"
        ]
      }
    </script>
  </head>
  <body>
    <div class="max-w-4xl mx-auto">
        <Navbar content={es.services.navbar}/>
        <ServicesHero content={es.services.content}/>
        <ServicesGrid content={es.services.content.cardsGrid}/>
        <ProcessSection content={es.services.content.howWeWork}/>
        <TechStack content={es.services.content.techStack}/>
        <CTASection content={es.services.content.launch}/>
        <Footer content={es.footer} />
    </div>
  </body>
</html>