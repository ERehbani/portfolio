---
const {content} = Astro.props
---

<section class="mx-auto max-w-4xl px-4 py-16 pt-32 sm:px-6 lg:px-8 lg:py-24 lg:pt-40">
  <div class="text-center">
    <h1 class="text-balance text-4xl font-bold tracking-tight text-foreground sm:text-5xl lg:text-6xl">
      {content.title}
    </h1>
    <p class="mx-auto mt-6 max-w-2xl text-pretty text-lg leading-relaxed text-muted-foreground">
      {content.description}
    </p>
  </div>
</section>
