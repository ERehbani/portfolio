---
import ContactDialog from "../react/contactDialog";



const { content } = Astro.props;
---

<section class="border-t border-border bg-muted/30">
  <div
    class="mx-auto max-w-4xl px-4 py-16 text-center sm:px-6 lg:px-8 lg:py-24"
  >
    <h2
      class="text-balance text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
    >
      {content.title}
    </h2>
    <p
      class="mx-auto mt-4 max-w-2xl text-pretty leading-relaxed text-muted-foreground"
    >
      {content.description}
    </p>
    <div
      class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row"
    >
      <!-- <button
        data-open-dialog
        data-service="Consulta General"
