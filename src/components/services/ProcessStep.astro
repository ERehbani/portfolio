---
interface Props {
  step: string
  title: string
  description: string
}

const { step, title, description } = Astro.props
---

<div class="text-center">
  <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-foreground text-background">
    <span class="font-mono text-sm font-semibold">{step}</span>
  </div>
  <h3 class="mt-4 font-semibold text-foreground">{title}</h3>
  <p class="mt-2 text-pretty text-sm leading-relaxed text-muted-foreground">{description}</p>
</div>
